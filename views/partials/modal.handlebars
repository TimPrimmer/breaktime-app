<div class="park-result-content">
  <h2 class="modal-title">{{name}}</h2>
  <p class="close-modal" data-park-code="{{park_code}}">X</p>
  <h3 class="modal-subtitle" data-states={{state}}></h3>
  <p class="modal-distance">40 miles away</p>
  {{#if saved}}
  <p class="modal-saved"> &#9829; Saved</p>
  {{/if}}
  {{#unless saved}}
  <p class="modal-saved"> &#9829; Save</p>
  {{/unless}}
  <h3>Activities</h3>
  <div class="modal-activities">
    {{#each activities}}
    <div class="modal-activity">{{name}}</div>
    {{/each}}
  </div>
  <h3>Description</h3>
  <p class="modal-description">{{description}}</p>
  <a href="{{url}}" class="modal-website">View Website</a>
  <img class="external-link-icon" src="assets/icons/open-iconic/svg/external-link.svg" alt="external link icon">
  <h3 class="weather-forecast">5-Day Forecast</h3>
  <div>
    {{> weather-forecast}}
  </div>
  <h3>Comments</h3>

    <div class="comments">
       <ul class="comments"></ul>
      {{#each comments}}
   
      <li>
      <div class="text">
        {{comment_text}}
      </div>
      <div class="username">
        ðŸ¥¾
        {{user.username}}
      </div>
</li>
    </ul>
  {{/each}}
</div>
{{#if loggedIn}}

<form class="comment-form" method="post">
  <div>
    <textarea name="comment-body-{{id}}" class="comment-body"></textarea>
  </div> <br/>

  <div>
    <button type="submit" class="btn btn-primary add-comment" onclick="commentFormHandler('{{id}}')">add comment</button>
  </div>
</form>

{{/if}}

