<div class="park-result-content">
  <h2 class="modal-title">{{name}}</h2>
  <p class="close-modal" data-park-code="{{park_code}}">X</p>
  <h3 class="modal-subtitle" data-states={{state}}></h3>
  {{#if distance}}
  <p class="modal-distance">{{distance}} miles away</p>
  {{/if}}
  {{#if loggedIn}}
  {{#if saved}}
  <p class="modal-saved" park_id="{{id}}">Saved</p>
  {{/if}}
  {{#unless saved}}
  <p class="modal-saved" park_id="{{id}}">Save</p>
  {{/unless}}
  {{/if}}
  <h3>Activities</h3>
  <div class="modal-activities">
    {{#each activities}}
    <div class="modal-activity">{{name}}</div>
    {{/each}}
  </div>
  <h3>Description</h3>
  <p class="modal-description">{{description}}</p>
  <a href="{{url}}" class="modal-website">View Website</a>
  <img class="external-link-icon" src="/assets/icons/open-iconic/svg/external-link.svg" alt="external link icon">
  <h3 class="weather-forecast">5-Day Forecast</h3>
  <div>
    {{> weather-forecast}}
  </div>
  
  <h3>Comments</h3>
  {{#unless comments}}
  <p>There are no comments for this park yet. Please <a href="/login">login</a> to leave a comment. </p>
  {{/unless}}
  <div class="comments">
    <ul class="comments"></ul>
    {{#each comments}}

    <li>
      <div class="text">
        {{comment_text}}
      </div>
      <div class="username">
        ðŸ¥¾
        {{user.username}}
      </div>
    </li>
    </ul>
    {{/each}}
  </div>
  {{#if loggedIn}}

  <form class="comment-form" method="post">
    <div>
      <h3><label class="add-comment-label" for="comment-body">Add Comment</label></h3>
      <textarea name="comment-body-{{id}}" class="comment-body"></textarea>
    </div>

    <div>
      <button type="button" class="btn btn-primary add-comment" onclick="commentFormHandler('{{id}}')">Add Comment</button>
    </div>
  </form>

  {{/if}}

  {{#if loggedIn}}

  <script src="/assets/js/comment.js"></script>

  {{/if}}


  {{!-- <h3>Directions</h3> --}}
  {{!-- <iframe src="" id="gmaps-box" width="2000" height="200" style="border:0;" allowfullscreen=""
    loading="lazy"></iframe> --}}
</div>