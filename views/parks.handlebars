<section id="results-page" user_id="{{user_id}}">
  <p id="results-filters"></p>
  <section id="results-container">

    {{#each parks }}
    <div class="park-card">
      <div class="park-image park-image-div" style="background-image: url({{image}})">
      </div>
      <div>
        <h4 class="park-name">{{name}}</h4>
        <p class="park-states" data-states={{state}}></p>
        {{#if distance}}
        <p class="miles-away">{{distance}} miles away</p>
        {{/if}}
        {{#if ../loggedIn}}
          {{#if saved}}
          <p class="saved" park_id="{{id}}">Saved</p>
          {{/if}}
          {{#unless saved}}
          <p class="saved" park_id="{{id}}">Save</p>
          {{/unless}}
        {{/if}}
      </div>
      <hr class="park-horizontal-row">
      <div class="park-description-div">
        <p class="park-description">{{description}}</p>
        <span class="park-modal park-modal-link" data-park-code="{{park_code}}">View details</span>
        <a class="park-website" href="{{url}}">Website</a>
        <img class="external-link-icon" src="/assets/icons/open-iconic/svg/external-link.svg" alt="external link icon">
      </div>
    </div>
    {{/each}}
    <div id="modal-container">
      {{#each parks as |park| }}
      <div id="{{park_code}}-modal" class="park-result-modal" style="display: none">

        {{> modal park=this loggedIn=../loggedIn }}

      </div>
      {{/each}}

    </div>
    {{#if pagination}}
    <div class="page-nav">
      {{#unless firstPage}}
      <h3 class="page-arrow" id="left-arrow">&#8592;</h3>
      {{/unless}}
      {{#each pageArr as |page|}}
      <p class="page-num">{{page.pageNum}}</p>
      {{/each}}
      {{#unless lastPage}}
      <h3 class="page-arrow" id="right-arrow">&#8594;</h3>
      {{/unless}}
    </div>
    {{/if}}
  </section>
</section>


